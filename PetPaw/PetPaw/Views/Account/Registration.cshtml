@model PetPaw.Models.Register

@{
    ViewBag.Title = "Registeration";
}
<div class="foto-secction container-fluid">
    <div class="box-shadow">
        <form class="contact-form container" action="/Account/Registration" method="post" style="padding-top:100px;">
            <h3 class="header-text float-left pb-3"> Registration </h3>
            <h3 class="header-text2 float-right pb-3"> Log In </h3>
            <div class="form-group">
                <input type="text" class="form-control form1 text-center" id="name" placeholder="Name" name="firstName">
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="text" class="form-control form1 text-center" id="surname" placeholder="Surname" name="lastName">
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class='input-group date text-center' id='datetimepicker1'>
                    <input type='date' class="form-control design roboto" name="Birthdate" placeholder="Birthdate" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <select class="design text-center" style="width:100%;" id="exampleSelect1" name="Gender">
                    <option style="display:none">Gender</option>
                    <option value="1">Male</option>
                    <option value="2">Keso</option>
                </select>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="email" class="form-control form1 text-center" id="email" placeholder="E-mail" name="Email">
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="password" class="form-control form1 text-center" id="password" placeholder="Password" name="Password">
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="password" class="form-control form1 text-center" id="password" placeholder="Repeat Password" name="RepeatPassword">
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.RepeatPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary send-bg mx-auto d-flex  mt-3">Sign Up </button>
        </form>
        <div class="text-login container ">
            <h4 class="text-in-contact-login  text-center"> Sign In </h4>
            <h4 class="text-in-contact-login2 text-center"> with your social network</h4>
            <p class="registering-text text-center mt-4"> Registering to this website,you accept our Terms of Use and our Privace Policy </p>
        </div>
        <form class="contact-form2">
            <div class="form-group">
                <a href="#"> <input type="text" style="text-align:center; color: white; font-size:25px" id="icon" class="form-control form1-bg1" value="Google"> </a>
            </div>
            <div class="form-group">
                <a href="#"> <input type="text" style="text-align:center; color:white;font-size:25px" id="icon2" class="form-control form1-bg2" value="Facebook"> </a>
            </div>
        </form>
    </div>
</div>