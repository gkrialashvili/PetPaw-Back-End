@model IEnumerable<PetPaw.Models.Slider>
@{
    ViewBag.Title = "ManagePictures";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="userTable">
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Image
                </th>
                <th>
                    Active
                </th>
                <th>
                    Create Date
                </th>
                <th>
                    Added by
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in @Model)
            {
                var image = "/Content/Upload/" + item.Name + ".png";
                <tr data-ID="@item.ID">
                    <td>
                        @item.ID
                    </td>
                    <td>
                        <img src=@image alt="sliderImage" style="width: auto; height: 100px;"/>
                    </td>
                    <td data-isactive="@item.ID" id="isactive">
                        @item.IsActive
                    </td>
                    <td>
                        @item.CreateDate
                    </td>
                    <td>
                        @item.user.firstName
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @{
                            if (@item.IsActive == true)
                            {
                                <button type="submit" class="btn addOrDeleteSliderPicture" data-id="@item.ID">დეაქტივაცია</button>
                            }
                            else
                            {
                                <button type="submit" class="btn addOrDeleteSliderPicture" data-id="@item.ID">გააქტიურება</button>
                            }
                        }

                    </td>
                </tr>
                            }
        </tbody>
    </table>
</div>