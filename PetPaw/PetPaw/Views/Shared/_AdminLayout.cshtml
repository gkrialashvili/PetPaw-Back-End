@using PetPaw.Models
<!DOCTYPE html>
@{
    var user = Session["user"] as user;
    string firstNameInitial = user?.firstName.Substring(0, 1);
    string lastNameInitial = user?.lastName.Substring(0, 1);
    var userInitials = (firstNameInitial + lastNameInitial);
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="">
        <ul>
            <li><a>Hello @userInitials</a></li>
            <li style="float: right"><a class="active" href="@Url.Action("Logout","Account")">Log out</a></li>
        </ul>
    </nav>
    <div>
        <div class="sidenav">
            <a href="#about">About</a>
            <a href="#services">Services</a>
            <a href="#clients">Clients</a>
            <a href="#contact">Contact</a>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
